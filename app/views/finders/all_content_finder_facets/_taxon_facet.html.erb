<%= render "components/filter_section", {
  heading_text: taxon_facet.name,
  visually_hidden_heading_prefix: "Filter by",
  status_text: taxon_facet.status_text,
  id: "facet_taxon_#{taxon_facet.key}",
  index_section: index,
  index_section_count: count,
  data_attributes: { "ga4-index": { index_section: index + 1, index_section_count: count } },
  change_category: "update-filter select",
} do %>
  <%= render "govuk_publishing_components/components/select", {
    id: 'level_one_taxon',
    label: "Topic",
    full_width: true,
    options: taxon_facet.topics
  } %>

  <div class="js-required govuk-form-group" data-ga4-section="Sub-topic">
    <%= render "govuk_publishing_components/components/select", {
      id: 'level_two_taxon',
      label: "Sub-topic",
      full_width: true,
      options: taxon_facet.sub_topics
    } %>
  </div>
<% end %>
