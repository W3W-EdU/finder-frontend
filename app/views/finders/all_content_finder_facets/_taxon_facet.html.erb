<%= render "components/filter_section", {
  **taxon_facet.section_attributes,
  change_category: "update-filter select",
  classes: "js-all-content-finder-taxonomy-select"
} do %>
    <%= render "govuk_publishing_components/components/select", {
      id: 'level_one_taxon',
      label: "Topic",
      full_width: true,
      options: taxon_facet.topics
    } %>

    <div class="js-required govuk-form-group" data-ga4-section="Subtopic">
      <%= render "govuk_publishing_components/components/select", {
        id: 'level_two_taxon',
        label: "Subtopic",
        full_width: true,
        options: taxon_facet.subtopics
      } %>
    </div>
<% end %>
